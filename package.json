{
    "name": "weather-widget",
    "version": "1.0.0",
    "description": "Mirco frontend for Weather data",
    "homepage": "https://github.com/FreaKnight/weather-widget#readme",
    "bugs": {
        "url": "https://github.com/FreaKnight/weather-widget/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FreaKnight/weather-widget.git"
    },
    "license": "GPL-3.0",
    "author": "Sean Jonker",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "clean": "pnpm -r exec rm -rf dist .vite .__mf__temp .__mf__win",
        "dev": "MF_DEV=true pnpm -r --parallel dev",
        "build": "pnpm -r run build",
        "type-check": "pnpm -r run type-check"
    },
    "devDependencies": {
        "@module-federation/dts-plugin": "2.0.1",
        "@types/node": "25.2.3",
        "typescript": "5.9.3"
    },
    "dependencies": {
        "react": "19.2.4",
        "react-dom": "19.2.4"
    },
    "packageManager": "pnpm@10.27.0",
    "pnpm": {
        "overrides": {
            "vite": "7.1.7",
            "react": "19.2.4",
            "react-dom": "19.2.4"
        }
    }
}
